// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id        String  @id @default(cuid())
  userId    String  @unique
  username  String  @unique
  imageUrl  String  @db.Text
  email     String? @db.Text
  firstName String?
  lastName  String?
  role      Role

  actions Action[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Application {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  description String?

  actions Action[]
}

model Action {
  id            String @id @default(cuid())
  name          String
  slug          String @unique
  description   String
  applicationId String

  application Application @relation(fields: [applicationId], references: [id])
  users       Profile[]
}

model Department {
  id       String    @id @default(cuid())
  name     String    @db.Text
  services Service[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id           String     @id @default(cuid())
  name         String     @db.Text
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])
  employees    Employee[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Employee {
  id            String       @id @default(cuid())
  firstName     String
  lastName      String
  imageUrl      String?      @db.Text
  cin           String       @unique
  gender        Gender
  phoneNumber   String
  email         String       @db.Text
  address       String       @db.Text
  birthday      DateTime
  maritalStatus MarialStatus
  iban          String       @db.Text
  rib           String       @db.Text
  joinedAt      DateTime
  jobTitle      String       @db.Text
  serviceId     String
  service       Service      @relation(fields: [serviceId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  user
  admin
}

enum MarialStatus {
  single
  married
  widowed
  divorced
}

enum Gender {
  male
  female
}
